
#Inserção de Dados
print()
print("Digite o nome da empresa")
NomeEmpresa = input()
print("Digite o nome do Gestor ou responsável no RH")
NomeResponsavel = input()
print("Digite o nome do cargo")
NomeCargo = input()
print("Digite a data de início do aviso prévio")
DataAviso = input()
print("Digite a data de término do aviso prévio")
DataTermino = input()
print("Digite o seu nome completo")
NomeCompleto= input()
print ("Digite a data e o local ")
DataLocal = input()


#Impressão dos Dados

print()
print(f"Á  {NomeEmpresa}")
print(f"Prezado(a) {NomeResponsavel}")
print(f"Venho por meio desta carta comunicar formalmente meu pedido de demissão do cargo de {NomeCargo}.")
print(f"Estarei á disposição da empresa durante o aviso prévio,no período de {DataAviso} a {DataTermino}")
print()
print(f"{DataLocal}")
print(f"{NomeCompleto}")

